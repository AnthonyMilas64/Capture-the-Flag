<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="750.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ServerGUIController">
    <children>
        <Button fx:id="btnStart" layoutX="270.0" layoutY="240.0" mnemonicParsing="false" onAction="#handleBtnStart" prefHeight="159.0" prefWidth="410.0" text="START" visible="false">
            <font>
                <Font size="80.0" />
            </font>
        </Button>

        <Button fx:id="sendButton" layoutX="150.0" layoutY="620.0" onAction="#handleSendMessageButton" text="send" />
        <Label layoutX="200.0" layoutY="625.0" text="message to send" translateZ="-131.0" />
        <Label fx:id="lblMessages" layoutX="25.0" layoutY="580.0" prefHeight="17.0" prefWidth="337.0" text="Messages will appear here..." />
        <TextField fx:id="sendTextField" layoutX="300.0" layoutY="620.0" translateZ="-131.0" />
        <Button fx:id="connectButton" layoutX="25.0" layoutY="620.0" mnemonicParsing="false" onAction="#handleConnectButton" text="connect" />
        <TextField fx:id="portTextField" layoutX="90.0" layoutY="620.0" prefHeight="25.0" prefWidth="50.0" text="2015" />
        <Label layoutX="103.0" layoutY="600.0" text="Port" />
        <Label fx:id="lblName1" layoutX="25.0" layoutY="555.0" />
        <Label fx:id="lblName2" layoutX="25.0" layoutY="535.0" />
        <Button fx:id="btnRdy" layoutX="25.0" layoutY="555.0" mnemonicParsing="false" onAction="#handleBtnRdy" text="Type your name and click me" />
        <TextField fx:id="txtName" layoutX="200.0" layoutY="555.0" />

    </children>
</AnchorPane>
